    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="0,0,0,1" ResizeBorderThickness="1" />
    </WindowChrome.WindowChrome>
    <DockPanel >

        <Grid Name="grdCeoSadrzaj" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Rectangle Grid.Row="0" DockPanel.Dock="Top" Height="75"   Name="titleBar" MouseDown="titleBar_MouseDown" Stroke="Black">
                <Rectangle.Fill>
                    <RadialGradientBrush RadiusY="2">
                        <GradientStop Color="#FF2F5778" Offset="1"/>
                        <GradientStop Color="#FF17405E"/>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Grid>
                <!--<TextBlock Text="{Binding Title, RelativeSource={RelativeSource FindAncestor,AncestorType=Window},FallbackValue=Title}" 
                      HorizontalAlignment="Center"
                       VerticalAlignment="Center" Foreground="White" FontSize="14" ></TextBlock>-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--<Grid.Effect>
                        <DropShadowEffect BlurRadius="2" Direction="270" RenderingBias="Quality" ShadowDepth="1"/>
                    </Grid.Effect>-->
                <ContentControl Grid.Row="0" x:Name="ctlTitleBar" DockPanel.Dock="Top" Template="{DynamicResource ctpGlavniProzorTitle}"  VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Height="75" MouseDown="titleBar_MouseDown" IsTabStop="False"/>

                <Grid Name="grdDugmiciZaProzor" Grid.ColumnSpan="3" HorizontalAlignment="Right" VerticalAlignment="Top" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" x:Name="dugmeMinimize"   Style="{StaticResource dugmeMinimize}"  Click="dugmeMinimize_Click" IsTabStop="False" />
                    <Button Grid.Column="1" x:Name="dugmeMaximize"   Style="{StaticResource dugmeMaximize}"  Click="dugmeMaximize_Click" IsTabStop="False" />
                    <Button Grid.Column="2" x:Name="dugmeZatvori" Style="{StaticResource dugmeClose}"   Click="dugmeZatvori_Click" IsTabStop="False"/>
                </Grid>

            </Grid>


            <Border  Grid.Row="1">
                
                <Border.Background>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusY="2" RadiusX="0.7">
                        <GradientStop Color="#FF270000" Offset="0.945"/>
                        <GradientStop Color="White" Offset="0.207"/>
                        <GradientStop Color="#FFEBF0F4" Offset="0.425"/>
                        <GradientStop Color="#FFE9EBEE" Offset="0.702"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect  Color="Black" Direction="90" BlurRadius="10" ShadowDepth="2" RenderingBias="Quality"/>
                </Border.Effect>
                <Border BorderBrush="Gainsboro" BorderThickness="0,5,0,0" Padding="0,5,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="0" Name="grdKorpaJePrazna" Visibility="Hidden">

                            <Border VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Label Content="Korpa je prazna" FontStyle="Italic" Foreground="#FF2F5778" FontSize="14"/>
                            </Border>


                        </Grid>

                        <Border x:Name="scrolVjuverKorpa"  Grid.Row="0" HorizontalAlignment="Stretch"   Visibility="Visible" BorderThickness="0,0,0,5" BorderBrush="Gainsboro">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid x:Name="grdHederKorpa" Grid.Row="0" HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="370"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="95"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="125"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="Label">
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Foreground" Value="#FF2F5778"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </Grid.Resources>
                                    <Border Grid.Column="0"  HorizontalAlignment="Stretch" BorderBrush="Gainsboro" BorderThickness="0,0,0,5" Background="#06000000">
                                        <Grid  HorizontalAlignment="Center">
                                            <Label Content="Proizvod" />
                                        </Grid>
                                    </Border>
                                    <Border Grid.Column="2" HorizontalAlignment="Stretch" BorderBrush="Gainsboro" BorderThickness="0,0,0,5" Background="#06000000">
                                        <Grid  HorizontalAlignment="Center">
                                            <Label Content="Cena" />
                                        </Grid>
                                    </Border>
                                    <Border Grid.Column="4" HorizontalAlignment="Stretch" BorderBrush="Gainsboro" BorderThickness="0,0,0,5" Background="#06000000">
                                        <Grid  HorizontalAlignment="Center">
                                            <Label Content="Ukupna cena" />
                                        </Grid>

                                    </Border>
                                    <Border Grid.Column="6" HorizontalAlignment="Stretch" BorderBrush="Gainsboro" BorderThickness="0,0,0,5" Background="#06000000">
                                        <Grid  HorizontalAlignment="Center">
                                            <Label Content="Količina"/>
                                        </Grid>

                                    </Border>
                                    <Border Grid.Column="8" HorizontalAlignment="Stretch" BorderBrush="Gainsboro" BorderThickness="0,0,0,5" Background="#06000000">
                                        <Grid  HorizontalAlignment="Center">
                                            <Label Content="Izbriši" />
                                        </Grid>

                                    </Border>
                                </Grid>
                                <ScrollViewer Grid.Row="1"  HorizontalAlignment="Stretch" Name="scrolVjuverKorpaSadrzaj" Visibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Auto" SizeChanged="scrolVjuverKorpaSadrzaj_SizeChanged">
                                    <Border  HorizontalAlignment="Center" Padding="0,5" >

                                        <Grid   HorizontalAlignment="Center" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="1"/>
