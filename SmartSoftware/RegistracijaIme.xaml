<Window x:Class="SmartSoftware.RegistracijaIme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ime Kupca za registraciju" Height="150" Width="300">
    <Grid Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="tbIme" />
        <Button Grid.Row="2" Grid.Column="0" Content="OK" Name="btnOk" Click="btnOk_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Otkaži"  Name="btnOtkazi" Click="btnOtkazi_Click"/>
    </Grid>
</Window>
