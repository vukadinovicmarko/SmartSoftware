        xmlns:avalon ="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:wpfToolkit ="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:smartSoftware="clr-namespace:SmartSoftware.ViewModel"
        Closed="Window_Closed"
        Title="REZERVACIJE" Height="700" Width="1000"  WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" StateChanged="Window_StateChanged" >



    <Window.Resources>

        <ControlTemplate x:Key="ctpGlavniProzorTitle">
            <Border  HorizontalAlignment="Stretch">

                <Border.Background>

                    <RadialGradientBrush RadiusY="2">
                        <GradientStop Color="#FF2F5778" Offset="1"/>
                        <GradientStop Color="#FF17405E"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>

                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="grdSlikaINazivAplikacije" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="15,10,0,0">
                        <Grid >
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>

                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" VerticalAlignment="Center"  >
                                <Image x:Name="slikaLogo"  Source="{Binding Source={StaticResource sveSlike},Path=PutanjaDoSlikeLogoNormalno}" Width="15" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="2" VerticalAlignment="Center" >
                                <TextBlock Name="tbNazivTitle"  Text="SmartSoftware" Foreground="White" FontSize="11" >

                                </TextBlock>
                            </Border>
                        </Grid>
                    </Border>
                    <Grid x:Name="grdSlikaINazivTitlaIPodaciOProdavcu" Grid.Column="1" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>

                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" VerticalAlignment="Center"  >
                                <Image x:Name="slikaTitlaLogo"  Source="{Binding Source={StaticResource sveSlike},Path=PutanjaDoSlikeRezervacije}" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="2" VerticalAlignment="Center" >
                                <TextBlock Name="tbNazivTitla"  Text="{Binding Title, RelativeSource={RelativeSource FindAncestor,AncestorType=Window},FallbackValue=Title}" Foreground="White" FontSize="14" >

                                </TextBlock>
                            </Border>

                        </Grid>
                        <Grid Grid.Row="2" Grid.ColumnSpan="3">
                            <Border Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch">
                                <Grid HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions >
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.TrenutniProdavac.ImeKorisnika, UpdateSourceTrigger=PropertyChanged}" Foreground="White" FontSize="11"/>
                                    <TextBlock Grid.Column="2" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.TrenutniProdavac.PrezimeKorisnika, UpdateSourceTrigger=PropertyChanged}" Foreground="White" FontSize="11"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <!--<Button Grid.ColumnSpan="3" Content="X" Style="{StaticResource dugmeClose}" HorizontalAlignment="Right"/>-->
                </Grid>
            </Border>
        </ControlTemplate>


        <Style x:Key="stilDugmiciIzbrisiOpremuIzRezervacije" TargetType="{x:Type Button}">
