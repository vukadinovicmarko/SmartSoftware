                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0">
                                            <Image Source="{Binding Source={StaticResource sveSlike},Path=PutanjaDoSlikeNaruciNaLagerHoverovano}" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="2">
                                            <Label Content="Učitaj još narudžbina" VerticalAlignment="Stretch" VerticalContentAlignment="Center" FontSize="10" Foreground="White"/>
                                        </Border>

                                    </Grid>
                                </Border>


                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>



