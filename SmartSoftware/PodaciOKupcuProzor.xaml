                                <Border Grid.Column="2">
                                    <Label Content="Sačuvaj" VerticalAlignment="Stretch" VerticalContentAlignment="Center" FontSize="10" Foreground="DarkGreen"/>
                                </Border>

                            </Grid>
                        </Border>


                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGreen"/>
