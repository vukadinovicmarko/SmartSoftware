        xmlns:avalon ="http://schemas.xceed.com/wpf/xaml/avalondock"
        Title="ODABIR KUPCA" Height="700" Width="900" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"  StateChanged="Window_StateChanged">

    <Window.Resources>

        <DataTemplate x:Key="probaAvalon">
            <Border Height="30">
                <TextBlock Text="{Binding Title}"/>
            </Border>
        </DataTemplate>


        <Style x:Key="stilDugmiciDodavanje" TargetType="{x:Type Button}">

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="FontSize" Value="10"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"  BorderThickness="1" Padding="10,0" BorderBrush="#FF2F5778">
                            <!--<ContentPresenter HorizontalAlignment="Center"  VerticalAlignment="Center" Width="Auto" />-->
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0"  VerticalAlignment="Center">
                                    <Image Source="{Binding Source={StaticResource sveSlike},Path=PutanjaDoSlikeNaruciNaLager, UpdateSourceTrigger=PropertyChanged}" Height="15" Width="15"/>
                                </Border>
                                <Border Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="#FF2F5778"/>
                                </Border>
                            </Grid>
                        </Border>


                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2F5778"/>
                    <Setter Property="Foreground" Value="White"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"  BorderThickness="0" Padding="10,0" BorderBrush="White">
                                    <!--<ContentPresenter HorizontalAlignment="Center"  VerticalAlignment="Center" Width="Auto" />-->
                                    <Grid VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0"  VerticalAlignment="Center">
                                            <Image Source="{Binding Source={StaticResource sveSlike},Path=PutanjaDoSlikeNaruciNaLagerHoverovano, UpdateSourceTrigger=PropertyChanged}" Height="15" Width="15"/>
                                        </Border>
                                        <Border Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="White" />
                                        </Border>
                                    </Grid>
                                </Border>


                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="stilDugmiciOpremaSacuvajUnos" TargetType="{x:Type Button}">
