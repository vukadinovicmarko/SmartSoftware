                                        </Border>
                                        <Border Grid.Column="2">
                                            <Label Content="Sačuvaj" VerticalAlignment="Stretch" VerticalContentAlignment="Center" FontSize="10" Foreground="White"/>
                                        </Border>

                                    </Grid>
                                </Border>


                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>

